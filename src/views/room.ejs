<!DOCTYPE html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link rel="stylesheet" href="/style/global.css">
        <link rel="stylesheet" href="/style/room.css">
        <link rel="stylesheet" href="/style/modal.css">
        <link rel="stylesheet" href="/style/responsive.css">

        <link rel="icon" type="image/x-icon" href="/images/icone-nav.png" style="border-radius: 50;">
        
        <!-- FONTES -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Poppins:wght@400;500;700&display=swap" rel="stylesheet">

        <script src="/scripts/main.js" defer type="module"></script>

        <title>Pergunta e Respostas - Kuroi</title>

    </head>

    <body>
        <div id="room" class="content">
            <header>
                <a href="/">
                    <img src="/images/kuroi.q.png" alt="logo">
                </a>

                <div class="buttons">

                    <div class="button outlined" id="room-id" data-id="<%= roomId %>">
                        #<%= roomId %>
                        <img src="/images/copia-cola.png" alt="Copiar número da sala">
                    </div>
                    <a class="button" href="#">
                        <img src="/images/entrar-sala.png" alt="Criar sala">
                        Criar Sala
                    </a>
                </div>
            </header>

            <main>
                <section id="question-form">
                    <h2>Faça sua pergunta</h2>
                    <form action="/question/create/<%= roomId %>" method="POST">
                        <label class="sr-only" for="question">O que você quer perguntar?</label>
                        <textarea name="question" id="question" placeholder="O que você quer perguntar?"></textarea>

                        <footer>
                            <div>
                                <img src="/images/cadeado.png" alt="Icone de cadeado">
                                Esta pergunta é anônima
                            </div>
                            <button>Enviar</button>
                        </footer>
                    </form>
                </section>

                <section id="questions">
                    <h2 class="sr-only">Perguntas da comunidade</h2>
                    <div class="questions">

                        <% questions.forEach(question => { %>

                            <div class="question-wrapper">
                                <div class="question-content">
                                    <div class="user">
                                        <img src="/images/adicionar-usuario.png" alt="Avatar">
                                    </div>
                                    <div class="question">
                                        <p><%= question.title %></p>
                                    </div>
                                </div>
                                <div class="action">
                                    <a class="check" href="#" data-id="<%= question.id %>">
                                        <img src="/images/mensagem-lida.png" alt="Mensagem lida">
                                        Marcar como lida
                                    </a>
                                    <a class="delete" href="#" data-id="<%= question.id %>">
                                        <img src="/images/excluir.png" alt="Excluir">
                                        Excluir
                                    </a>
                                </div>
                            </div>

                        <% }); %>

                        <% questionsRead.forEach(questionRead => { %>
                            <div class="question-wrapper read">
                                <div class="question-content">
                                    <div class="user">
                                        <img src="/images/adicionar-usuario.png" alt="Avatar">
                                    </div>
                                    <div class="question">
                                        <p><%= questionRead.title %></p>
                                    </div>
                                </div>
                                <div class="action">
                                    <a class="delete" href="#" data-id="<%= questionRead.id %>">
                                        <img src="/images/excluir.png" alt="Excluir">
                                        Excluir
                                    </a>
                                </div>
                            </div>
                        <% }); %>

                    </div>

                </section>

            
            </main>
        </div>

        

        

        <!--MODAL-->
        <div class="modal-wrapper">
            <div class="modal">
                <h2>Excluir pergunta?</h2>
                <p>Tem certeza?</p>

                <form action="#" method="POST">
                    <label class="sr-only" for="password">Digite sua senha</label>
                    <input type="password" name="password" id="password" placeholder="Digite sua senha">
                    <p id="erroSenha" class="sr-only" for="password">Erro de senha</p>

                    <div class="buttons">
                        <div class="button gray cancel">Cancelar</div>
                        <button class="red">Sim, excluir</button>
                    </div>
                </form>

            </div>
        </div>

    </body>

</html>